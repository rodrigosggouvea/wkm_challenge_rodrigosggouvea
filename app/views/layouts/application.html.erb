<!DOCTYPE html>
<html>
  <head>
    <title>WKM - Rodrigo Gouvea</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <header id="header" class="page-topbar">
      <div class="navbar-fixed">
        <nav class="navbar-color">
          <div class="nav-wrapper container">
            <%= link_to 'WKM - Rodrigo Gouvea', root_path, class: 'brand-logo darken-1' %>
            <ul class="right">
              <li>
                <a href="javascript:void(0);" data-activates="translation-dropdown" class="dropdown-button waves-effect waves-block waves-light">
                  <%= t('select_language') %>
                  <i class="mdi-navigation-arrow-drop-down right"></i>
                </a>
              </li>
              <li>
                <ul id="translation-dropdown" class="dropdown-content">
                  <li><%= link_to "PortuguÃªs", url_for(locale: :pt) %></li>
                  <li><%= link_to "English",   url_for(locale: :en) %></li>
                </ul>
              </li>
            </ul>
          </div>
        </nav>
      </div>
    </header>
    <div class="wrapper">
      <ul class="side-nav fixed leftside-navigation" id="main-menu">
        <li class="bold"><%= link_to t('clients.title'), clients_path %></li>
        <li class="bold"><%= link_to t('products.title'), products_path %></li>
        <li class="bold"><%= link_to t('orders.title'), orders_path %></li>
      </ul>
      <section id="content">
        <div class="container">
          <div class="row">
            <div class="col s12 m12 l12">
              <%= yield %>
            </div>
          </div>
        </div>
      </section>
    </div>
  </body>
</html>
